<DataSource ID="DetailViewerField" autoIdField="name">
	<fields>
		<field name="name"			type="string"  xmlAttribute="true" basic="true"/>

        <!-- ID auto-generated by VB -->
        <field name="autoName" xmlAttribute="true" type="string" hidden="true"/>

		<field name="type"			type="DetailViewerFieldType" rebuildOnChange="true" xmlAttribute="true" basic="true"/>
		<field name="title"			type="HTMLString"  xmlAttribute="true" basic="true"/>
		<field name="valueMap"		type="ValueMap" />
        <!-- Not supported in Reify at present -->
		<field name="showIf"		type="expression" hidden="true" />
		<field name="asHTML"		type="boolean" visibility="internal"/>
		<field name="value"			type="HTMLString" title="Header value" />

		<field name="dateFormatter"	type="string" />
		<field name="decimalPad"	type="integer"/>
		<field name="decimalPrecision" type="integer"/>

		<field name="cellStyle"		type="cssClass" />
		<field name="printCellStyle" type="cssClass" />

		<!-- For type=link -->
		<field name="linkText"		type="HTMLString" />
		<field name="linkTextProperty" type="string" hidden="true" />
		<field name="target"		type="string" title="Open in (target)" />

		<!-- For type="header" -->
		<field name="width"			type="positiveInteger" visibility="internal"/>
		<field name="height"		type="positiveInteger" />

		<!-- For type="image" -->
        <field name="imageSize"     type="number"/>
        <field name="imageWidth"    type="number"/>
        <field name="imageHeight"   type="number"/>

		<field name="canHilite"		type="boolean" />
        <field name="hiliteIconSize" type="number"/>
        <field name="hiliteIconWidth" type="number"/>
        <field name="hiliteIconHeight" type="number"/>
        <field name="hiliteIconLeftPadding" type="number"/>
        <field name="hiliteIconRightPadding" type="number"/>
        <field name="hiliteIconPosition" type="enum">
            <valueMap>
                <value>before</value>
                <value>after</value>
                <value>replace</value>
            </valueMap>
        </field> 
	</fields>

    <types>
        <type ID="DetailViewerFieldType" inheritsFrom="enum">
            <valueMap>
                <value ID="text">text: a normal text value</value>
                <value ID="integer">integer: a whole number</value>
                <value ID="float">float: a fractional or decimal number</value>
                <value ID="boolean">boolean: only a true or false allowed</value>
                <value ID="date">date: a specific date, with no time</value>
                <value ID="time">time: a specific time, with no date</value>
                <value ID="datetime">datetime: a specific time on a specific date</value>
                <value ID="link">link: a link to something on the web</value>
                <value ID="image">image: a link to an image on the web</value>
                <value ID="header">header: a header value</value>
                <value ID="separator">separator: a separator between fields</value>
            </valueMap>
        </type>
    </types>

</DataSource>
