<DataSource ID="NavItem" inheritsFrom="ListGridRecord" autoIdField="id">

    <fields>
        <field name="id" xmlAttribute="true" title="Identifier" type="string" basic="true"/>

        <!-- ID auto-generated by VB -->
        <field name="autoId" xmlAttribute="true" type="string" hidden="true"/>

        <field name="title" xmlAttribute="true" type="string" basic="true"/>
        <field name="isHeader" xmlAttribute="true" type="boolean" basic="true"/>
        <field name="isSeparator" xmlAttribute="true" type="boolean" basic="true"/>
        <field name="icon" type="URL" title="Icon URL"/>
        <field name="pane" type="Canvas" />
        <field name="items" type="NavItem" multiple="true" />
        <field name="linkText" type="string" inapplicable="true"/>
    </fields>

</DataSource>
